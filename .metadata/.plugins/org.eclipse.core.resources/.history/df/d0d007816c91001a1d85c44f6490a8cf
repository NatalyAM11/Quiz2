package main;

import processing.core.PApplet;

public class Cuadro implements Runnable{
protected int posX, posY, tam;
private int r,g,b;
PApplet app;
protected int velX,velY;

	public Cuadro (int posX, int posY, int tam, PApplet app) {
		this.posX=app;
		this.posY=posY;
		this.tam=tam;
		this.app=app;
		this.velX=3;
		this.velY=3;
		
	}
	
	
	public void pintar() {

		
		app.rect(posX, posY, tam, tam);
		
	
	}

	
	public void run() {
		try{
		
			mover();
		
		} catch (IndexOutOfBoundsException e) {
			System.out.println(e.getMessage());
			
		}catch (Exception e) {
		
		}
	}
	
	public void mover() {
		
		posX += velX;
        if(posX > app.width) {
            velX *= -1;
        }
        if(posX < 0) {
            velX *= -1;
        }
        posY += velY;
        if(posY > app.height) {
            velY *= -1;
        }
        if(posY < 0) {
            velY *= -1;
        }
	}
	
	public int getPosX() {
		return posX;
	}


	public void setPosX(int posX) {
		this.posX = posX;
	}


	public int getPosY() {
		return posY;
	}


	public void setPosY(int posY) {
		this.posY = posY;
	}


	public int getTam() {
		return tam;
	}


	public void setTam(int tam) {
		this.tam = tam;
	}


	public int getR() {
		return r;
	}


	public void setR(int r) {
		this.r = r;
	}


	public int getG() {
		return g;
	}


	public void setG(int g) {
		this.g = g;
	}


	public int getB() {
		return b;
	}


	public void setB(int b) {
		this.b = b;
	}


	public PApplet getApp() {
		return app;
	}


	public void setApp(PApplet app) {
		this.app = app;
	}


}
